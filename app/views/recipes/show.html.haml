.main-content
    #recipe_top.row
        .col-md-4
            = image_tag @recipe.image.url(:medium), class: 'recipe_image'
        .col-md-8
            #recipe_info
                %h1= @recipe.title
                %p= @recipe.description
    .row
        .col-md-6
            #ingredients
                %h2 Ingredients
                %ul
                    - @recipe.ingredients.each do |i|
                        %li=i.name
        .col-md-6
            #directions
                %h2 Directions
                %ul
                    - @recipe.directions.each do |d|
                        %li=d.step

    .row
        .col-md-12
            .pull-right.btn-group
                = link_to 'Edit', edit_recipe_path(@recipe), class: 'btn btn-default'
                = link_to 'Delete', @recipe, method: :delete, data: { confirm: "Are you sure to delete the record?" }, class: 'btn btn-danger'
                = link_to 'Back', recipes_path, class: 'btn btn-default'
%br/